  "paths": {
    "/search.php?s={drinkName}": {
      "get": {
        "tags": [
          "DrinkSearchClass"
        ],
        "operationId": "GetDrink",
        "summary": "Search Drink Name",
        "parameters": [
          {
            "name": "drinkName",
            "in": "path",
            "description": "drink to fetch",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Root"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Root"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Root"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Root": {
        "type": "array",
        "name": "drinks",
        "items": {
          "type": "object",
          "properties": {
            "strDrink": {
              "type": "string",
              "nullable": false
            },
            "strInstructions": {
              "type": "string",
              "nullable": true
            }
          }
        }
      }
    }
  }
}


