    public int fontSize(string text)
    {
        var logger = LoggerFactory.CreateLogger<FetchData>();

        int Length = text.Length;

        int size = 200 - (Length * 10);

        logger.LogDebug("200 - (" + Length + ") * 10 = " + size);

        return size;
    }
}
